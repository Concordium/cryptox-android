<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles defined in CryptoX design -->

    <style name="CryptoX_BottomSheetHandle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/cryptox_bottom_sheet_handle_background</item>
    </style>

    <!-- region Typography -->
    <style name="CryptoX_Typography_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/cryptox_grey_additional</item>
    </style>

    <style name="CryptoX_Typography_TitleMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/cryptox_white_main</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CryptoX_Typography_TitleLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/cryptox_white_main</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CryptoX_Typography_Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/cryptox_grey_main</item>
    </style>

    <style name="CryptoX_Typography_Body_Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/w500</item>
        <item name="android:textColor">@color/cryptox_grey_secondary</item>
    </style>

    <style name="CryptoX_Typography_Body_Medium.Error">
        <item name="drawableStartCompat">@drawable/cryptox_ico_info_pinky</item>
        <item name="android:drawablePadding">16sp</item>
    </style>

    <style name="CryptoX_Typography_Headline_Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/cryptox_white_main</item>
    </style>

    <style name="CryptoX_Typography_Body_Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/w500</item>
        <item name="android:textColor">@color/cryptox_grey_secondary</item>
    </style>

    <style name="CryptoX_Typography_Headline_Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textAppearance">@style/MW24_Typography_H4</item>
        <item name="android:textColor">@color/cryptox_white_main</item>
    </style>
    <!-- endregion Typography -->

    <!-- region Buttons -->
    <style name="Cryptox_Button_Secondary">
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/cryptox_button_secondary_background</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/cryptox_button_secondary_text_color</item>
        <item name="android:paddingHorizontal">28dp</item>
        <item name="android:drawablePadding">13sp</item>
    </style>

