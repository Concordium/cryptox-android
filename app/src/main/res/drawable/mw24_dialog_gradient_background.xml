<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="0%"
                android:centerY="10%"
                android:startColor="@color/mw24_gradient_start_color"
                android:centerColor="@color/mw24_gradient_center_color"
                android:endColor="@color/mw24_gradient_end_color"
                android:useLevel="false" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item>
        <color android:color="@color/mw24_plain_white_70"/>
    </item>
</layer-list>