<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="@color/cryptox_white_main" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
                <shape android:shape="oval">
                    <solid android:color="@color/cryptox_white_main" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@color/cryptox_grey_additional" />
        </shape>
    </item>

</selector>
