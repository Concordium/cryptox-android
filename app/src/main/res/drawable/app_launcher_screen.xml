<?xml version="1.0" encoding="utf-8"?>

<!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black as your theme transitions. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <!-- When set as window background via the theme,
         some of the background will be hidden behind status bar and button bar -->
    <item android:drawable="@drawable/cryptox_gradient_main" />

    <item
        android:width="120dp"
        android:height="120dp"
        android:drawable="@drawable/mw24_app_icon"
        android:gravity="center" />

</layer-list>
