<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#181A1A" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Progress Indicator -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <gradient
                    android:angle="90"
                    android:centerColor="#EDDABF"
                    android:endColor="#A49AE3"
                    android:gradientRadius="2500%"
                    android:startColor="#9EF2EB"
                    android:type="radial"
                    android:centerX="0"
                    android:centerY="0"/>
                <corners android:radius="16dp" />
            </shape>
        </clip>
    </item>
</layer-list>