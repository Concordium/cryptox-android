<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#f2f2f2" />
        </shape>
    </item>

    <item
        android:bottom="-1dp"
        android:end="30dp"
        android:start="30dp"
        android:top="-1dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#a0baf7" />
        </shape>
    </item>

    <item
        android:bottom="30dp"
        android:end="-1dp"
        android:start="-1dp"
        android:top="30dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#a0baf7" />
        </shape>
    </item>
</layer-list>
