<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners
                android:topLeftRadius="@dimen/ccx_modal_corner_radius"
                android:topRightRadius="@dimen/ccx_modal_corner_radius" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item android:bottom="-1dp">
        <!-- Negative bottom offset to get rid of bottom stroke-->
        <shape>
            <corners
                android:topLeftRadius="@dimen/ccx_modal_corner_radius"
                android:topRightRadius="@dimen/ccx_modal_corner_radius" />
            <gradient
                android:angle="90"
                android:endColor="#33EBF0F0"
                android:startColor="#664D6666"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#DEDEDE" />
        </shape>
    </item>
</layer-list>
