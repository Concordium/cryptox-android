<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    style="@style/CryptoX_Container_IdentityWithAccount"
    android:layout_marginTop="16dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/header_id_textview"
        style="@style/CryptoX_Typography_Headline_Medium"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ID:" />

    <TextView
        android:id="@+id/header_textview"
        style="@style/CryptoX_Typography_Headline_Medium"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toRightOf="@id/header_id_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=" Nellie Patrickjkds dsf dsf sd fds fdsf sdf sdfasad " />

    <TextView
        android:id="@+id/transfer_time_textview"
        style="@style/CryptoX_Typography_Headline_Medium"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_textview"
        tools:text="Accounts:" />

    <TextView
        android:id="@+id/content_textview"
        style="@style/CryptoX_Typography_Body_Medium"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transfer_time_textview"
        tools:text="Savings\nGeneral" />

    <View
        android:id="@+id/readonly_divider"
        style="@style/CryptoX_Divider_Horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_textview" />

    <TextView
        android:id="@+id/readonly_header_textview"
        style="@style/CryptoX_Typography_Headline_Medium"
        android:layout_marginTop="32dp"
        android:text="@string/import_confirmed_readonly_accounts_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_textview" />

    <TextView
        android:id="@+id/readonly_content_textview"
        style="@style/CryptoX_Typography_Body_Medium"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/readonly_header_textview"
        tools:text="Savings\nGeneral" />

</androidx.constraintlayout.widget.ConstraintLayout>
