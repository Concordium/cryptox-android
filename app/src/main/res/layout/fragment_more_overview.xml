<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mw24_black_blur">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/size16"
                android:paddingVertical="@dimen/size8">

                <ImageView
                    android:id="@+id/close_menu_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/settings_overview_close_menu_description"
                    android:padding="@dimen/size8"
                    android:src="@drawable/mw24_cross_close"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/cryptox_white_main" />

                <TextView
                    android:id="@+id/menu_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/settings_overview_menu"
                    android:textAppearance="@style/MW24_Typography_Title"
                    android:textColor="@color/cryptox_white_main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/close_menu_btn">

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size16"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/SettingsOverviewBlockItem"
                        android:layout_marginTop="@dimen/size16"
                        android:text="@string/settings_overview_block_options" />

                    <LinearLayout
                        android:id="@+id/unshielding_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_unshielding"
                            app:drawableStartCompat="@drawable/ccx_ico_unshield" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/identities_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_identities"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_identities" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wallets_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/wallets_title"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_wallets" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/address_book_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_address_book"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_address_book" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/notifications_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_notifications"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_notifications" />

                    </LinearLayout>

                    <TextView
                        style="@style/SettingsOverviewBlockItem"
                        android:layout_marginTop="@dimen/size24"
                        android:text="@string/settings_overview_block_security" />

                    <LinearLayout
                        android:id="@+id/alter_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_alter_password"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_biometric" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/seed_reveal_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_reveal_seed"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_seed_phrase" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/seed_phrase_reveal_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_reveal_seed_phrase"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_seed_phrase" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/export_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_export"
                            app:drawableStartCompat="@drawable/cryptox_ico_export" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/import_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_import"
                            app:drawableStartCompat="@drawable/cryptox_ico_import" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recover_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_recover"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_recovery" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wallet_connect_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_clear_wallet_connect"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_wallet_connect" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/erase_data_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_erase_data"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_erase_data" />
                    </LinearLayout>

                    <TextView
                        style="@style/SettingsOverviewBlockItem"
                        android:layout_marginTop="@dimen/size16"
                        android:text="@string/settings_overview_block_other" />

                    <LinearLayout
                        android:id="@+id/tracking_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_analytics"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_analytics" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/about_layout"
                        style="@style/SettingsOverviewItem">

                        <TextView
                            style="@style/SettingsOverviewItemTextView"
                            android:text="@string/settings_overview_item_about"
                            app:drawableStartCompat="@drawable/mw24_ic_settings_about" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <include
                android:id="@+id/progress"
                layout="@layout/progress" />

        </LinearLayout>
    </eightbitlab.com.blurview.BlurView>
</androidx.constraintlayout.widget.ConstraintLayout>
