<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CCX_GradientCard_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/identity_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:textAppearance="@style/CCX_Typography_CardLabel"
        android:textColor="@color/ccx_mineral_blue_tint_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5"
        tools:text="Identity 1" />

    <TextView
        android:id="@+id/identity_accounts_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textAppearance="@style/CCX_Typography_DecorativeLabel"
        android:textColor="@color/ccx_mineral_blue_tint_2"
        app:layout_constraintBottom_toBottomOf="@id/identity_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/identity_name"
        app:layout_constraintTop_toTopOf="@id/identity_name"
        app:layout_constraintWidth="wrap_content"
        tools:text="Accounts: 3" />

    <LinearLayout
        android:id="@+id/accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/identity_name"
        tools:background="#CCCCCC"
        tools:layout_height="100dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
