<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mw24_dialog_background">

    <ImageView
        android:id="@+id/close_button"
        style="@style/CryptoX_Close_ImageButton"
        android:contentDescription="@string/dialog_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mw24_ic_dialog_close"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:importantForAccessibility="no"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="200dp"
        app:layout_constraintWidth_percent="0.45"
        app:srcCompat="@drawable/mw24_shielding" />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="@dimen/size32"
        android:gravity="center"
        android:text="@string/unshielding_notice_title"
        android:textAppearance="@style/MW24_Typography_Jakarta_Heading_M"
        android:textColor="@color/mw24_content_inverse_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view" />

    <TextView
        android:id="@+id/details_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/unshielding_notice_message"
        android:textAppearance="@style/MW24_Typography_Body_M_Regular"
        android:textColor="@color/mw24_content_inverse_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text_view" />

    <Button
        android:id="@+id/unshield_button"
        style="@style/MW24_Button_Primary_Inverse"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/size24"
        android:layout_marginTop="@dimen/size32"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="@string/unshielding_notice_unshield"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
