<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/loading"
        layout="@layout/progress" />

    <TextView
        android:id="@+id/password_requirements_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/settings_overview_google_drive_set_password_requirements"
        android:textAppearance="@style/MW24_Typography_Additional_Capture_Small"
        android:textColor="@color/mw24_blue_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/set_password_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_requirements_textview">

        <com.concordium.wallet.uicore.view.InputFieldView
            android:id="@+id/set_password_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mw24_container_stroked_background"
            app:labelText="@string/settings_overview_google_drive_set_password_label"
            app:layout_constraintBottom_toTopOf="@id/set_password_notice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/set_password_input_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/settings_overview_google_drive_set_password_error"
            android:textAppearance="@style/MW24_Typography_Text_Mid_Alternative"
            android:textColor="@color/mw24_attention_red"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/set_password_notice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/set_password_input_layout"
            app:layout_constraintTop_toBottomOf="@id/set_password_input_layout"
            app:layout_constraintVertical_bias="0"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/set_password_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/set_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/notice_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/mw24_ic_tooltip_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/mw24_info_orange" />

            <TextView
                android:id="@+id/notice_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/settings_overview_google_drive_set_password_notice"
                android:textAppearance="@style/MW24_Typography_Main_Capture_Small"
                android:textColor="@color/mw24_blue_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/notice_icon"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/set_password_button"
            style="@style/MW24_Button_Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/settings_overview_google_drive_set_password_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/repeat_password_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_requirements_textview">

        <com.concordium.wallet.uicore.view.InputFieldView
            android:id="@+id/repeat_password_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mw24_container_stroked_background"
            app:labelText="@string/settings_overview_google_drive_set_password_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repeat_password_input_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/settings_overview_google_drive_repeat_password_error"
            android:textAppearance="@style/MW24_Typography_Text_Mid_Alternative"
            android:textColor="@color/mw24_attention_red"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/repeat_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/repeat_password_input_layout"
            app:layout_constraintTop_toBottomOf="@id/repeat_password_input_layout"
            app:layout_constraintVertical_bias="0"
            tools:visibility="visible" />

        <Button
            android:id="@+id/repeat_password_button"
            style="@style/MW24_Button_Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/settings_overview_google_drive_repeat_password_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>