<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/segmented_gradient_button_background"
    android:paddingHorizontal="@dimen/size16"
    android:paddingVertical="@dimen/size8">

    <ImageView
        android:id="@+id/tab_icon"
        android:layout_width="@dimen/size16"
        android:layout_height="@dimen/size16"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tab_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/mw24_ic_receive_btn" />

    <TextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size6"
        android:textAppearance="@style/MW24_Typography_Text_Mid"
        android:textColor="@color/mw24_plain_white_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/tab_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Send" />

</androidx.constraintlayout.widget.ConstraintLayout>