<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size4"
    android:background="@drawable/mw24_container_primary_background"
    android:orientation="horizontal"
    android:padding="@dimen/size16">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/MW24_Typography_Label_M_Medium"
        android:textColor="@color/mw24_content_primary"
        tools:text="Mainnet" />

    <TextView
        android:id="@+id/action_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MW24_Typography_Label_M_Medium"
        android:textColor="@color/mw24_content_primary"
        tools:text="Connect" />
</LinearLayout>
