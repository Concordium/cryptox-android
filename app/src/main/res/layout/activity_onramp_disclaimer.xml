<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="@dimen/size8"
        app:layout_constraintBottom_toTopOf="@id/accept_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

        <TextView
            android:id="@+id/details_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size16"
            android:background="@drawable/mw24_container_primary_background"
            android:gravity="start"
            android:lineHeight="19sp"
            android:padding="@dimen/size16"
            android:text="@string/ccd_onramp_disclaimer_content"
            android:textAppearance="@style/MW24_Typography_Text_Mid_Alternative"
            android:textColor="@color/mw24_content_primary"
            android:textColorLink="@color/mw24_content_accent_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p" />

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/accept_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_layout">

        <Button
            android:id="@+id/cancel_button"
            style="@style/MW24_Button_Secondary"
            android:layout_width="0dp"
            android:text="@string/ccd_onramp_disclaimer_cancel"
            app:layout_constraintBottom_toTopOf="@id/proceed_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.concordium.wallet.uicore.button.IconButton
            android:id="@+id/proceed_button"
            style="@style/MW24_Button_Primary"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/size8"
            app:buttonText="@string/ccd_onramp_disclaimer_understand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cancel_button"
            app:priority="primary" />

        <Button
            android:id="@+id/close_button"
            style="@style/MW24_Button_Primary"
            android:layout_width="0dp"
            android:text="@string/ccd_onramp_disclaimer_close"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
