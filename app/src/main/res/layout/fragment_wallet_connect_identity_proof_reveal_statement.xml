<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statementHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/identity_proof_header_gradient"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="@string/information_to_reveal"
            android:textColor="#455A64" />

        <LinearLayout
            android:id="@+id/statementLines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            tools:listitem="@layout/identity_proof_statement_line"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/statementDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/reveal_description"
            tools:text="Note that all the information above will be revealed to the connected service." />

    </LinearLayout>
</androidx.cardview.widget.CardView>
