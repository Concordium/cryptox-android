<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/attribute_name_textview"
        style="@style/CryptoX_Typography_Body_Medium"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/attribute_value_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Birth date xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />

    <TextView
        android:id="@+id/attribute_value_textview"
        style="@style/CryptoX_Typography_Body_Medium"
        android:layout_width="0dp"
        android:textColor="@color/cryptox_white_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1989 xxx" />

    <TextView
        android:id="@+id/provider_name_textview"
        style="@style/CryptoX_Typography_Caption"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attribute_name_textview"
        tools:text="Notabene" />

    <View
        android:id="@+id/divider"
        style="@style/CryptoX_Divider_Horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/provider_name_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>

