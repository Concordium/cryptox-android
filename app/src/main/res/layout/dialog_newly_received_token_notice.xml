<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ccx_dialog_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/cis_newly_received_notice_title"
        android:textAppearance="@style/CCX_Typography_H2"
        android:textColor="@color/ccx_neutral_tint_7" />

    <TextView
        android:id="@+id/details_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/template_cis_newly_received_notice_message"
        android:textAppearance="@style/CCX_Typography_Body"
        android:textColor="@color/ccx_neutral_tint_5" />

    <Button
        android:id="@+id/keep_button"
        style="@style/CCX_Button_Primary.Modal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/cis_newly_received_notice_keep_token" />

    <Button
        android:id="@+id/remove_button"
        style="@style/CCX_Button_Primary.Modal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="14dp"
        android:background="@null"
        android:text="@string/cis_newly_received_notice_remove_token"
        android:textColor="@color/ccx_neutral_tint_7" />

</LinearLayout>
