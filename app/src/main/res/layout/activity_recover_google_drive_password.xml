<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/loading"
        layout="@layout/progress" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

        <TextView
            android:id="@+id/enter_password_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_google_drive_enter_encryption_password_info"
            android:textAppearance="@style/MW24_Typography_Text_Mid"
            android:textColor="@color/cryptox_white_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.concordium.wallet.uicore.view.InputFieldView
            android:id="@+id/enter_password_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/mw24_container_stroked_background"
            app:labelText="@string/settings_overview_google_drive_set_password_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_password_info" />

        <TextView
            android:id="@+id/enter_password_input_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/settings_overview_google_drive_set_password_error"
            android:textAppearance="@style/MW24_Typography_Text_Mid_Alternative"
            android:textColor="@color/mw24_attention_red"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/enter_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_password_input_layout"
            app:layout_constraintVertical_bias="0"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/enter_password_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/settings_overview_google_drive_set_password_error"
            android:textAppearance="@style/MW24_Typography_Text_Mid_Alternative"
            android:textColor="@color/mw24_attention_red"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/enter_password_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_password_input_layout"
            app:layout_constraintVertical_bias="0"
            tools:visibility="visible" />

        <Button
            android:id="@+id/enter_password_button"
            style="@style/MW24_Button_Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/import_google_drive_enter_encryption_password_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>