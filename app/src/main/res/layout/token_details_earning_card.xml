<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size24"
    android:background="@drawable/mw24_container_primary_background"
    android:padding="@dimen/size16"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/earn_percent_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:importantForAccessibility="no"
        android:src="@drawable/mw24_ic_percent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/mw24_content_accent_secondary" />

    <TextView
        android:id="@+id/earn_percent_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size8"
        android:text="@string/accounts_overview_earning_label"
        android:textAppearance="@style/MW24_Typography_Label_L_Medium"
        android:textColor="@color/cryptox_white_main"
        app:layout_constraintBottom_toBottomOf="@id/earn_percent_icon"
        app:layout_constraintStart_toEndOf="@id/earn_percent_icon"
        app:layout_constraintTop_toTopOf="@id/earn_percent_icon" />

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:importantForAccessibility="no"
        android:src="@drawable/cryptox_ico_chevron_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/mw24_plain_white_20" />

    <TextView
        android:id="@+id/staked_balance_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size12"
        android:text="@string/accounts_overview_staked_balance"
        android:textAppearance="@style/MW24_Typography_Text_Mid"
        android:textColor="@color/mw24_content_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/earn_percent_icon" />

    <TextView
        android:id="@+id/staked_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size8"
        android:textAppearance="@style/MW24_Typography_Text_Mid"
        android:textColor="@color/cryptox_white_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/staked_balance_label"
        tools:text="500,000.00 CCD" />

    <TextView
        android:id="@+id/staked_mode_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size48"
        android:text="@string/accounts_overview_staked_mode"
        android:textAppearance="@style/MW24_Typography_Text_Mid"
        android:textColor="@color/mw24_content_secondary"
        app:layout_constraintBottom_toBottomOf="@id/staked_balance_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/staked_balance_label" />

    <TextView
        android:id="@+id/staked_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MW24_Typography_Text_Mid"
        android:textColor="@color/cryptox_white_main"
        app:layout_constraintBottom_toBottomOf="@id/staked_balance"
        app:layout_constraintStart_toStartOf="@id/staked_mode_label"
        app:layout_constraintTop_toTopOf="@id/staked_balance"
        tools:text="@string/accounts_overview_staked_mode_passive" />

</androidx.constraintlayout.widget.ConstraintLayout>