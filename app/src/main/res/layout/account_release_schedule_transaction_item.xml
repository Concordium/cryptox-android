<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/identifier_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/date"
    android:orientation="horizontal"
    tools:background="@drawable/cryptox_gradient_card">

    <TextView
        android:id="@+id/identifier"
        style="@style/CryptoX_Typography_Body_Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/cryptox_black_additional"
        tools:text="abc425bacd" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:src="@drawable/cryptox_ico_copy"
        app:tint="@color/cryptox_black_additional" />
</LinearLayout>
