<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/attribute_name_textview"
        style="@style/CryptoX_Typography_Body_Medium"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/attribute_value_textview"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_min="112dp"
        tools:text="Birth  xxxxxxxxxxxxxxxxx xxxxxx xxx xxxxxxx" />

    <TextView
        android:id="@+id/attribute_value_textview"
        style="@style/CryptoX_Typography_Body_Medium"
        android:layout_width="0dp"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:textColor="@color/cryptox_white_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/attribute_name_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_default="wrap"
        tools:text="1989 xxx xx xxxx xxx xx xxx x xxxxxx xxxxxx xxxx xxx" />

    <View
        android:id="@+id/divider"
        style="@style/CryptoX_Divider_Horizontal"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

