<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/confirm_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <TextView
            style="@style/CryptoX_Typography_Headline_Large"
            android:layout_marginTop="40dp"
            android:text="@string/identity_create_identity_setup_name" />

        <TextView
            style="@style/CryptoX_Typography_Body_Medium"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="@string/identity_create_identity_name_info" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/identity_name_layout"
            style="@style/Layout.TextInputLayout"
            android:layout_marginTop="30dp"
            android:hint="@string/identity_create_identity_name_identity_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/identity_name_edittext"
                style="@style/CryptoX_InputField"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences"
                android:maxLength="35" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/confirm_button"
        style="@style/CryptoX_Button_Primary"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/activity_vertical_margin"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/identity_create_identity_name_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>
