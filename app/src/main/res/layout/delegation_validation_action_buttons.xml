<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/stop_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/stop_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/mw24_account_action_button_background"
            android:contentDescription="@string/earn_status_stop_button"
            android:padding="11dp"
            android:tooltipText="@string/earn_status_stop_button"
            app:srcCompat="@drawable/mw24_ic_stop_btn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="@string/earn_status_stop_button"
            android:textAppearance="@style/MW24_Typography_Additional_Capture_Small"
            android:textColor="@color/mw24_blue_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/update_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/stop_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/update_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/mw24_account_action_button_background"
            android:contentDescription="@string/earn_status_update_button"
            android:padding="11dp"
            android:tooltipText="@string/earn_status_update_button"
            app:srcCompat="@drawable/mw24_ic_update_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="@string/earn_status_update_button"
            android:textAppearance="@style/MW24_Typography_Additional_Capture_Small"
            android:textColor="@color/mw24_blue_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/suspend_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/update_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/suspend_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/mw24_account_action_button_background"
            android:contentDescription="@string/delegation_status_suspend_button"
            android:padding="11dp"
            android:tooltipText="@string/delegation_status_suspend_button"
            app:srcCompat="@drawable/mw24_ic_suspend_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="@string/delegation_status_suspend_button"
            android:textAppearance="@style/MW24_Typography_Additional_Capture_Small"
            android:textColor="@color/mw24_blue_2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resume_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/suspend_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/resume_btn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/mw24_account_action_button_background"
            android:contentDescription="@string/delegation_status_resume_button"
            android:padding="11dp"
            android:tooltipText="@string/delegation_status_resume_button"
            app:srcCompat="@drawable/mw24_ic_resume_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="@string/delegation_status_resume_button"
            android:textAppearance="@style/MW24_Typography_Additional_Capture_Small"
            android:textColor="@color/mw24_blue_2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>