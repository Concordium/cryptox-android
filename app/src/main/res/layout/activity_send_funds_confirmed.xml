<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/confirm_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/all_good"
            android:padding="40dp"
            android:src="@drawable/ic_check" />

        <TextView
            style="@style/CryptoX_Typography_TitleLarge"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/transaction_submitted" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/amount_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/separator_1">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v_guideline_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/amount_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:textSize="42sp"
                app:layout_constraintEnd_toEndOf="@+id/v_guideline_50"
                app:layout_constraintStart_toStartOf="@+id/v_guideline_50"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/currency_label_bg"
                android:padding="3dp"
                android:text="@string/app_gstroke"
                android:textColor="@color/cryptox_deep_blue"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/amount_textview"
                app:layout_constraintTop_toTopOf="@+id/amount_textview" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/fee_textview"
            style="@style/CryptoX_Typography_Caption"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            tools:text="@string/send_funds_confirmed_fee_info" />

        <TextView
            android:id="@+id/memo_confirmation_textview"
            style="@style/CryptoX_Typography_Caption"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            tools:text="@string/send_funds_confirmation_memo_with_linebreak" />

    </LinearLayout>

    <Button
        android:id="@+id/confirm_button"
        style="@style/CryptoX_Button_Primary"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/new_account_confirmed_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
