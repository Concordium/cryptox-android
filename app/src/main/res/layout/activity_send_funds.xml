<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transaction.sendfunds.SendFundsActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/balance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

        <TextView
            style="@style/CryptoX_Typography_Body_Medium"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/accounts_overview_balance_at_disposal" />

        <TextView
            android:id="@+id/balance_total_textview"
            style="@style/CryptoX_Typography_Body_Medium"
            android:layout_width="wrap_content"
            tools:text="123.2322" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/shielded_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balance_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/account_card_vertical_margin_half"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/CryptoX_Typography_Body_Medium"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/accounts_overview_shielded_balance" />

            <TextView
                android:id="@+id/shielded_total_textview"
                style="@style/CryptoX_Typography_Body_Medium"
                android:layout_width="wrap_content"
                tools:text="123.2322" />

            <LinearLayout
                android:id="@+id/shielded_lock_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shielded_lock_plus"
                    style="@style/CryptoX_Typography_Body_Medium"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="2dp"
                    android:text="@string/plus_sign" />

                <ImageView
                    style="@style/Image"
                    android:layout_width="11dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shielded_icon"
                    app:tint="@color/text_grey" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/memo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shielded_balance_layout"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/account_card_vertical_margin_half"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                style="@style/CryptoX_Typography_Body_Medium"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/memo_label" />

            <TextView
                android:id="@+id/memo_textview"
                style="@style/CryptoX_Typography_Body_Medium"
                android:layout_width="wrap_content"
                tools:text="123.2322" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/cryptox_grey_additional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amount_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/separator_1">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v_guideline_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <com.concordium.wallet.uicore.view.AmountEditText
            android:id="@+id/amount_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_horizontal"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_white"
            android:textSize="42sp"
            app:layout_constraintEnd_toEndOf="@+id/v_guideline_50"
            app:layout_constraintStart_toStartOf="@+id/v_guideline_50"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0,01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/currency_label_bg"
            android:padding="3dp"
            android:text="@string/app_gstroke"
            android:textColor="@color/cryptox_deep_blue"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/amount_edittext"
            app:layout_constraintTop_toTopOf="@+id/amount_edittext" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/fee_info_textview"
        style="@style/CryptoX_Typography_Caption"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/error_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_block"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@string/send_funds_fee_info"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/error_textview"
        style="@style/CryptoX_Typography_Body_Medium.Error"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/list_item_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/list_item_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="@string/send_funds_error_insufficient_funds"
        app:layout_constraintBottom_toTopOf="@id/recipient_and_button_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fee_info_textview"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recipient_and_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v_guideline_50_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/memo_container"
            style="@style/Cryptox_Button_Secondary"
            android:layout_width="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/send_funds_optional_add_memo"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/confirm_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/v_guideline_50_2" />

        <Button
            android:id="@+id/select_recipient_layout"
            style="@style/Cryptox_Button_Secondary"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/send_funds_select_recipient_or_unshield_amount"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/confirm_button"
            app:layout_constraintEnd_toStartOf="@+id/v_guideline_50_2"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/confirm_button"
            style="@style/CryptoX_Button_Primary"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:enabled="false"
            android:text="@string/send_funds_confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/progress"
        layout="@layout/progress" />

</androidx.constraintlayout.widget.ConstraintLayout>
