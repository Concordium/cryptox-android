<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/cis2_token_view_background"
    android:clickable="true"
    android:paddingHorizontal="8dp"
    android:paddingVertical="6dp">

    <ImageView
        android:id="@+id/label_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/mw24_ic_cis2_token"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/mw24_content_secondary" />

    <TextView
        android:id="@+id/label_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:text="@string/account_details_cis2_token_type_label"
        android:textAppearance="@style/MW24_Typography_Main_Capture_Small"
        android:textColor="@color/mw24_content_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/question_icon"
        app:layout_constraintStart_toEndOf="@id/label_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/question_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:alpha="0.5"
        android:importantForAccessibility="no"
        android:src="@drawable/mw24_ic_circled_question_mark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_status_title"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/mw24_content_secondary" />

</androidx.constraintlayout.widget.ConstraintLayout>