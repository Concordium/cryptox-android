<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ccx_bottom_sheet_dialog_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/welcome_recover_import_via_seed_or_private_key"
        android:textAppearance="@style/CCX_Typography_H1"
        android:textColor="@color/ccx_neutral_tint_7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="start"
        android:text="@string/import_wallet_seed_phrase"
        android:textAppearance="@style/CCX_Typography_H3"
        android:textColor="@color/ccx_neutral_tint_5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:lineHeight="20sp"
        android:paddingHorizontal="4dp"
        android:text="@string/import_wallet_seed_phrase_description"
        android:textAppearance="@style/CCX_Typography_Body"
        android:textColor="@color/ccx_neutral_tint_5"
        tools:targetApi="p" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="@string/import_wallet_example"
        android:textAppearance="@style/CCX_Typography_Body"
        android:textColor="@color/ccx_neutral_tint_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:text="@string/import_wallet_example_seed_1"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:text="@string/import_wallet_example_seed_2"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:text="@string/import_wallet_example_seed_3"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:text="@string/import_wallet_example_seed_4"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:text="@string/import_wallet_example_seed_5"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:text="@string/import_wallet_example_seed_6"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:alpha="0.8"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:alpha="0.6"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:alpha="0.4"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:alpha="0.2"
            android:background="@drawable/cryptox_import_seed_container_background"
            android:gravity="start"
            android:paddingHorizontal="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:textAppearance="@style/CCX_Typography_Body"
            android:textColor="@color/ccx_mineral_blue_tint_4" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="start"
        android:text="@string/import_wallet_private_key"
        android:textAppearance="@style/CCX_Typography_H3"
        android:textColor="@color/ccx_neutral_tint_5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:lineHeight="20sp"
        android:paddingHorizontal="4dp"
        android:text="@string/import_wallet_private_key_description"
        android:textAppearance="@style/CCX_Typography_Body"
        android:textColor="@color/ccx_neutral_tint_5"
        tools:targetApi="p" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="@string/import_wallet_example"
        android:textAppearance="@style/CCX_Typography_Body"
        android:textColor="@color/ccx_neutral_tint_5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/cryptox_import_seed_container_background"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:text="@string/import_wallet_example_private_key"
        android:textAppearance="@style/CCX_Typography_Body"
        android:textColor="@color/ccx_mineral_blue_tint_4" />

    <Button
        android:id="@+id/ok_button"
        style="@style/CCX_Button_Primary"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:backgroundTint="#14191F"
        android:gravity="center"
        android:text="@string/import_wallet_okay_button"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/create_wallet_step_3_text_view" />

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>
