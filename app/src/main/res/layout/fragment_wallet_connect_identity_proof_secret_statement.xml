<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <include
        android:id="@+id/secret_statement"
        layout="@layout/identity_proof_statement_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/statementDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:paddingTop="8dp"
        android:textAppearance="@style/MW24_Typography_Main_Capture_Small"
        android:textColor="#BBBDBD"
        tools:text="This will prove that your Date of birth is between January 01, 1800 and February 27, 2006 " />

</LinearLayout>
