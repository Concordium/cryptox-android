<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statementHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/identity_proof_header_gradient"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:text="@string/zero_knowledge_proof"
            android:textColor="#455A64" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            >

            <include
                android:id="@+id/statement_line"
                layout="@layout/identity_proof_statement_line"
                />

        </RelativeLayout>

            <TextView
                android:id="@+id/statementDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="10dp"
                tools:text="This will prove that your Date of birth is between January 01, 1800 and February 27, 2006 " />

        </LinearLayout>
</androidx.cardview.widget.CardView>
