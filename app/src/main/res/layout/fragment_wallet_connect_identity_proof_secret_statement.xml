<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="15dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/secret_statement"
        layout="@layout/identity_proof_statement_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/statementDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CryptoX_Typography_Caption"
        android:paddingTop="8dp"
        android:minLines="1"

        tools:text="This will prove that your Date of birth is between January 01, 1800 and February 27, 2006 "
        />

</LinearLayout>
