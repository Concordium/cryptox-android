<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/identity_proof_statement_header"
            android:text="@string/zero_knowledge_proof" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp">

            <include
                android:id="@+id/statement_line"
                layout="@layout/identity_proof_statement_line" />
        </RelativeLayout>

        <include
            android:id="@+id/statementDescription"
            layout="@layout/identity_proof_statement_description"
            android:text="@string/reveal_description"
            tools:text="This will prove that your Date of birth is between January 01, 1800 and February 27, 2006 " />

    </LinearLayout>
</androidx.cardview.widget.CardView>
